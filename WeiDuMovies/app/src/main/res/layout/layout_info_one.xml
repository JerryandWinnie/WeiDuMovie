<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="剧情简介"/>

        <TextView
            android:id="@+id/tv_info_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_12"
            android:text="改编自漫威漫画，也是漫威电影宇宙第22部影片。复仇者联盟的一众超级英雄，必须抱着牺牲一切的信念，与史上最强大反派灭霸殊死一搏，阻止其摧毁宇宙的邪恶计划。"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="演职人员"
            android:layout_marginTop="@dimen/dp_30"/>

        <TextView
            android:id="@+id/tv_info_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_12"
            android:text="导演（2）"
            android:layout_marginTop="@dimen/dp_15"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_info_director"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_info_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_12"
            android:text="演员（2）"
            android:layout_marginTop="@dimen/dp_15"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_info_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>

</LinearLayout>