<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:padding="@dimen/dp_20"
    tools:context=".view.activity.SetActivity">

    <com.bw.movie.view.view.TitleView
        android:id="@+id/title_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/square_bg">

        <TextView
            android:id="@+id/tv_myinfo_huan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="清除缓存"/>
        <TextView
            android:id="@+id/tv_myinfo_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_myinfo_huan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="10M"/>


        <TextView
            android:id="@+id/tv_myinfo_geng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_huan"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="版本更新"/>

        <ImageView
            android:id="@+id/img_my_set_update"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_53"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/shape1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/square_bg">

        <TextView
            android:id="@+id/tv_myinfo_chong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="重置密码"/>
        <ImageView
            android:id="@+id/img_my_set_reset"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/shape1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_set_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/square_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="退出登录"/>
    </RelativeLayout>


</LinearLayout>