<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:padding="@dimen/dp_20"
    tools:context=".view.activity.SelfInfoActivity">

    <com.bw.movie.view.view.TitleView
        android:id="@+id/title_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/square_bg">
        <TextView
            android:id="@+id/tv_myinfo_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="头     像"/>
        <ImageView
            android:id="@+id/img_myinfo"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_26"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/tv_myinfo_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_head"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="昵     称"/>
        <TextView
            android:id="@+id/tv_myinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_myinfo_nicheng"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="电影故事"/>


        <TextView
            android:id="@+id/tv_myinfo_xinbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_nicheng"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="性     别"/>
        <TextView
            android:id="@+id/tv_myinfo_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_myinfo_xinbie"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="男"/>


        <TextView
            android:id="@+id/tv_myinfo_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_xinbie"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="出生日期"/>
        <TextView
            android:id="@+id/tv_myinfo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_myinfo_riqi"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="1991-03-20"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/square_bg">

        <TextView
            android:id="@+id/tv_myinfo_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="邮    箱"/>
        <TextView
            android:id="@+id/tv_myinfo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:text="12317930@qq.com"/>

    </RelativeLayout>

</LinearLayout>