<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/v2_pjcyk1"
    tools:context=".view.activity.MainActivity">

    <EditText
        android:id="@+id/edit_login_email"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/edit_email_bg"
        android:hint="请输入邮箱账号"
        android:paddingLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <EditText
            android:id="@+id/edit_login_pwd"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/edit_pwd_bg"
            android:hint="请输入密码"
            android:password="true"
            android:paddingLeft="@dimen/dp_20"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_login_forget"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_50"
            android:text="忘记密码"
            android:gravity="center"
            android:background="@drawable/textview_border"
            android:layout_toRightOf="@id/edit_login_pwd"
            android:layout_alignBottom="@id/edit_login_pwd"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="暂无帐号 立即注册"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_50"
        android:text="登录"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/button_shape"/>

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:textSize="@dimen/sp_22"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_22"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:textSize="@dimen/sp_22"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_weixin"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"/>

</LinearLayout>